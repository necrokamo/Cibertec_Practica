<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Práctica MVC</title>
    @Scripts.Render("~/bundles/jquery")    
    @Scripts.Render("~/bundles/modernizr")  
    @Styles.Render("~/Content/css")
</head>
<body>
    <header>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Categories", "Index", "Categories", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("Customers", "Index", "Customers", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("Employees", "Index", "Employees", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("Orders", "Index", "Orders", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("Products", "Index", "Products", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <nav class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Index", "Index", "Home")</li>
                    </ul>
                </nav>
            </div>
        </div>

    </header>
    <section class="container body-content">
        @RenderBody()
    </section>
    @*<footer>
        &copy; @DateTime.Now.Year - Todos los derechos reservados al autor.
    </footer>*@
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
